{% set action = app.request.attributes.get("_route") %}

<li {% if action == 'sepulture' %} class="active" {% endif %}>
    <a href="{{ path('sepulture') }}"><span class="glyphicon glyphicon-search"></span> Rechercher
    </a>
</li>
<li {% if action == 'patronymes' %} class="active" {% endif %}>
    <a href="{{ path('patronymes') }}">
        Patronymes
    </a>
</li>
<li {% if action == 'cimetiere' %} class="active" {% endif %}>
    <a href="{{ path('cimetiere') }}">Cimetières
    </a>
</li>
<li {% if action == 'page_show' %} class="active" {% endif %}>
    <a href="{{ path('page_show', {'slug':'contact'}) }}">Contact
    </a>
</li>
{% if app.user %}

    {% if is_granted('ROLE_SEPULTURE_EDITEUR') %}
        <li {% if action == 'sepulture_new' %} class="active" {% endif %}>
            <a href="{{ path('sepulture_new') }}">
                <span class="glyphicon glyphicon-plus"></span> Nouvelle sépulture
            </a>
        </li>
    {% endif %}

    {% if is_granted('ROLE_SEPULTURE_ADMIN') %}
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Paramètres... <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><a href="{{ path('commentaire') }}">Commentaires</a></li>
                <li><a href="{{ path('typesepulture') }}">Types sépulture</a></li>
                <li><a href="{{ path('materiaux') }}">Matériaux</a></li>
                <li><a href="{{ path('visuel') }}">Aspect visuel</a></li>
                <li><a href="{{ path('legal') }}">Aspect légal</a></li>
                <li><a href="{{ path('sihl') }}">Sihl</a></li>
                <li><a href="{{ path('contact_rw_index') }}">Contact Rw</a></li>
                <li><a href="{{ path('user_index') }}">Les utilisateurs</a></li>
            </ul>
        </li>
    {% endif %}
{% else %}
    <li>
        <a href="{{ path('app_login') }}">
            <span class="glyphicon glyphicon-log-in"></span> Connexion</a>
    </li>
{% endif %}