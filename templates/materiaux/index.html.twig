{% extends '@Sepulture/base.html.twig' %}

{% block body -%}

    <div class="card"><h3 class="card-header">Liste des matériaux</h3>
        <div class="card-body">

    {% if is_granted('ROLE_SEPULTURE_ADMIN') %}
                <a href="{{ path('materiaux_new') }}" class="btn btn-primary">
                    <i class="glyphicon glyphicon-plus"></i> Ajouter un matériau
                </a> <br/><br/>
    {% endif %}

    <table class="table table-bordered table-hover table-condensed table-responsive">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nombre de sépultures</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('materiaux_show', { 'id': entity.id }) }}">{{ entity.nom }}</a></td>
                <td>{{ entity.sepultures|length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div></div>
{% endblock %}
