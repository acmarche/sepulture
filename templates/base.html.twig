<!doctype html>
<html lang="fr" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Cimetière - sépultures - {{ sepulture_ville }}{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/sepulture/favicon.ico') }}"/>
    {% block stylesheets %}{% endblock %}

    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}

</head>
<body class="d-flex flex-column h-100">
{% set action = app.request.attributes.get("_route") %}
{% include '@Sepulture/_header.html.twig' %}

<main role="main" class="container pt-3">

    {% include '@Sepulture/_flash_messages.html.twig' %}

    {% block notifications %}

    {% endblock %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted"> {% include '@Sepulture/signature.html.twig' %}</span>
        </div>
    </footer>
{% endblock %}
{% block scripts %}{% endblock %}
{% block javascripts %}{% endblock %}
{% include '@Sepulture/default/google.html.twig' %}
</body>
</html>
